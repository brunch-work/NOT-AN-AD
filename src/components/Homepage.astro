<script>
  const filterButton = document.getElementById("filter-button");
  const filterPopover = document.getElementById("filters-popover");
  const filterRadios = document.querySelectorAll(
    '#filters-popover input[type="radio"]'
  );

  filterRadios.forEach((radio) => {
    radio.addEventListener("change", (event) => {
      const icon = event.target.parentElement
        .querySelector("svg")
        .cloneNode(true);

      if (filterButton) {
        filterButton.replaceChildren(icon);
        filterButton.innerHTML += event.target.parentElement.innerText;
      }
      filterPopover && filterPopover.hidePopover();
    });
  });
</script>
